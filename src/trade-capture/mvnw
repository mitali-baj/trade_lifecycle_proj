# ----------------------------------------------------------------------------
# Maven Wrapper startup script
#
# This script is used to start the Maven build process. It will download and
# install Maven if it is not already installed.
# ----------------------------------------------------------------------------

# Resolve the current directory
CURRENT_DIR=$(pwd)

# Find the project base directory (where the .mvn directory is located)
PROJECT_BASE_DIR=""
while [ "$CURRENT_DIR" != "/" ]; do
  if [ -d "$CURRENT_DIR/.mvn" ]; then
    PROJECT_BASE_DIR="$CURRENT_DIR"
    break
  fi
  CURRENT_DIR=$(dirname "$CURRENT_DIR")
done

if [ -z "$PROJECT_BASE_DIR" ]; then
  echo "Error: Could not find .mvn directory. Please run this script from a Maven project." >&2
  exit 1
fi

# Change to the project base directory
cd "$PROJECT_BASE_DIR"

# Execute the Maven Wrapper JAR
java -jar ".mvn/wrapper/maven-wrapper.jar" "$@"
